@{
  Layout = "_Layout";
}

@using SweetSavory.Models
@model List<SweetSavory.Models.Flavor>

@if (Model.Count == 0)
{
  <p>No Flavors Listed Yet</p>
}
else
{
  @foreach (Flavor flavor in Model)
  {
    <p>@Html.ActionLink($"{flavor.Name}", "Details", "Flavors", new { id = flavor.FlavorId})</p>
  }
}

<p>@Html.ActionLink("Add a Flavor", "Create", "Flavors")</p>