@{
  Layout = "_Layout";
}

@using SweetSavory.ViewModels
@model RegisterViewModel

<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.LabelFor(user => user.Email)
    @Html.TextBoxFor(user=> user.Email)<br>

    @Html.LabelFor(user=> user.Password)
    @Html.PasswordFor(user=> user.Password, new { required = "required"})<br>

    @Html.LabelFor(user=> user.ConfirmPassword)
    @Html.PasswordFor(user=> user.ConfirmPassword, new { required = "required"})<br>

    <input type="submit" value="Register" />
}